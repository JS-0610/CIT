@model List<PruebaTecnica.Models.RolViewModel>
@{
    ViewBag.Title = "Rol";
}

<div class="row">
    <div class="col-lg-12">
        <input type="button" style="margin:10px;" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Rol/Add")'" value="Agregar Rol" />
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
            @foreach (var oElemento in Model)
            {

                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Rol</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Rol/Edit/"+oElemento.Id)'" type="button" value="Editar" class="btn btn-warning" />
                        <input onclick="jsDelete(@oElemento.Id)" type="button" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@section scripts{

    <script>
        function jsDelete(id) {
            url = "@Url.Content("~/Rol/Delete")"+"/"+id;
            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href="@Url.Content("~/Rol/")"
                } else {
                    alert(data);
                }
            })
        }
    </script>

}