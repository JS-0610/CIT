@model List<PruebaTecnica.Models.UserViewModel>
@{
    ViewBag.Title = "Usuarios";
}

<div class="row">
    <div class="col-lg-12">
        <input type="button" style="margin:10px;" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/User/Add")'" value="Agregar Usuario" />
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Usuario</th>
                <th>Correo Electrónico</th>
                <th>Celular</th>
                <th>Puesto</th>
                <th>Acciones</th>
            </tr>
            @foreach (var oElemento in Model)
            {

                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Usuario</td>
                    <td>@oElemento.Email</td>
                    <td>@oElemento.Celular</td>
                    <td>@oElemento.Puesto</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/User/Edit/"+oElemento.Id)'" type="button" value="Editar" class="btn btn-warning" />
                        <input onclick="jsDelete(@oElemento.Id)" type="button" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@section scripts{

    <script>
        function jsDelete(id) {
            url = "@Url.Content("~/User/Delete")"+"/"+id;
            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href="@Url.Content("~/User/")"
                } else {
                    alert("Ocurrio un error al eliminar");
                }
            })
        }
    </script>

}